// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$esbuild-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "revealProblems": "never"
      },

      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
        "type": "shell",
        "command": "npm",
        "args": [
            "run",
            "pretest"
        ],
        "label": "preTest",
        "isBackground": true,
        "presentation": {
            "echo": true,
            "reveal": "silent",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": false,
            "clear": true
        },

    }
  ]
}
